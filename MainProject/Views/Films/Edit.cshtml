
@model Movie
<h1>Edit Film Form</h1>

<form class="row g-3" method="post" asp-action="Edit">
    <div class="col-1">
        <label asp-for="Id" class="form-label">Id</label>
        <input readonly asp-for="Id" type="text" class="form-control">
    </div>

    <div class="col-11">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Enter film name">
    </div>

    <div class="col-md-5">
        <label asp-for="Lenght" class="form-label">Length</label>
        <div class="input-group">
            <input required asp-for="Lenght" type="number" min="1" step="0.01" class="form-control" placeholder="Enter film length">
            <span class="input-group-text">min</span>
        </div>
    </div>

    <div class="col-md-4">
        <label asp-for="Rating" class="form-label">Rating</label>
        <div class="input-group">
            <input asp-for="Rating" type="number" min="1" max="5" class="form-control" placeholder="Enter film rating">
            <span class="input-group-text">%</span>
        </div>
    </div>

    <div class="col-md-3">
        <label asp-for="AdultRating" class="form-label">Adult rating</label>
        <input required asp-for="AdultRating" type="number" min="0" max="21" class="form-control" placeholder="Enter adult rating of film">
    </div>

    <div class="col-md-12">
        <label asp-for="FilmGenres" class="form-label">Genre</label>
        <select asp-for="FilmGenres" asp-items="ViewBag.Genre" class="form-select">
            <option disabled selected>Choose film genre...</option>
        </select>
    </div>

    <div class="col-md-6">
        <a asp-action="Index" class="btn btn-dark w-100">
            <i class="bi bi-arrow-left"></i>
            Back
        </a>
    </div>
    <div class="col-md-6">
        <button type="submit" class="btn btn-success w-100">
            <i class="bi bi-pencil-fill"></i>
            Edit
        </button>
    </div>
</form>
