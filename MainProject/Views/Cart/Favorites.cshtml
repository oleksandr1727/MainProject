@using Core.Dtos;
@model List<MovieDto>;
<div class="favoritets text-black center">
    <div class="favorite-header"
      My favorites
    </div>
    <div class="favorites-body">
        <h5 class="favorites-title">Favorite list</h5>

        @if(!Model.Any())
        {
            <p>Looks like your favorites is empty</p>
            <div>
                <a asp-controller="Home" asp-action="Index" class="btn-primary mt-2">
                    <i class="bi bi-basket2"></i> Back to searching
                </a>
            </div>
        }
        else
        {
            <ol class="list-group list-group-numbered">
                @foreach(var i in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">

                        <img height="45" src="@i.ImageUrl" alt="@i.Name" />
                        <div class="ms-2 me-auto text-start">
                            <div class="fw-bold">@i.Name</div>
                            Film genre:@i.FilmGenres | Length: @i.Lenght
                        </div>
                        <div>
                            <span style="background-color: #0d6efd" class="badge text-bg-primary">@i.Rating</span>
                            <a asp-action="Remove" asp-route-id="i.Id" class="btn text-danger">
                                <i class="bi bi-trash3"></i>
                            </a>
                        </div>
                    </li>
                }
            </ol>
        }
    </div>
</div>